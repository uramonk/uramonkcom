@inherits LayoutComponentBase

<MudThemeProvider Theme="MyCustomTheme" />
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar Fixed="true">
        <!-- xs時はメニューで表示 -->
        <MudHidden Breakpoint="Breakpoint.Xs" Invert="true">
            <MudMenu Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit">
                <MudMenuItem Link="#top" Target="_top">TOP</MudMenuItem>
                <MudMenuItem Link="#profile" Target="_top" >PROFILE</MudMenuItem>
                <MudMenuItem Link="#skill" Target="_top" >SKILL</MudMenuItem>
            </MudMenu>
        </MudHidden>
        <MudText Typo="Typo.h6" Link="/" Class="ml-3">uramonk.com</MudText>
        <MudAppBarSpacer />
        <!-- sm以上時はAppBarに表示 -->
        <MudHidden Breakpoint="Breakpoint.SmAndUp" Invert="true">
            <MudButton Link="#top" Target="_top" Variant="Variant.Text" Color="Color.Inherit" DisableRipple="true">TOP</MudButton>
            <!-- https://github.com/dotnet/aspnetcore/issues/23522#issuecomment-653336890 -->
            <MudButton Link="#profile" Target="_top" Variant="Variant.Text" Color="Color.Inherit" DisableRipple="true">PROFILE</MudButton>
            <MudButton Link="#skill" Target="_top" Variant="Variant.Text" Color="Color.Inherit" DisableRipple="true">SKILL</MudButton>
        </MudHidden>
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Edge="Edge.End" Color="Color.Inherit" Link="https://github.com/uramonk/uramonkcom" Target="_blank"/>
    </MudAppBar>
    <MudMainContent style="padding-top:0">
        @Body
    </MudMainContent>
    <MudText Class="mud-theme-primary p-2 mt-6" Align="Align.Center">© 2021 uramonk</MudText>
</MudLayout>

@code {
    // カスタムテーマ
    MudTheme MyCustomTheme = new MudTheme() {
        Palette = new Palette() {
            Primary = Colors.BlueGrey.Default,
            Secondary = Colors.BlueGrey.Lighten5,
            AppbarText = "#FFFFFF",
            TextPrimary = "#212121",
            TextSecondary = "#757575",
            Divider = "#BDBDBD",
            AppbarBackground = Colors.BlueGrey.Default,
            Background = Colors.BlueGrey.Lighten5,
        }
    };
}